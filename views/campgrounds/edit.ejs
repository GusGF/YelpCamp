<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%=campGround._id%>?_method=PUT" method="post">
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" value="<%= campGround.title %>" name="campground[title]">
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" value="<%= campGround.location %>">
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image URL</label>
          <input class="form-control" type="text" id="location" value="<%= campGround.image %>">
        </div>

        <label for="price" class="form-label">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon3">$</span>
          <input type="text" class="form-control" placeholder="0.00" id="price" aria-describedby="basic-addon3"
            value="<%= campGround.price %>">
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" cols="30" rows="10"><%=campGround.description %></textarea>
        </div>
        <button class="btn btn-info mb-3">Update Campground</button>
      </form>
      <a href="/campgrounds">All Campgrounds</a>
    </div>
  </div>